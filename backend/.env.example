# Application
PROJECT_NAME="Multilingual E-Commerce"
ENVIRONMENT="development"
API_V1_STR="/api/v1"

# Security Keys - GENERATE YOUR OWN KEYS!
# Never use these example values in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your-secret-key-here"
SESSION_SECRET_KEY="your-session-secret-key-here"

# JWT Configuration
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_COOKIE_NAME="ecommerce_session"
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE="lax"

# Database
DATABASE_URL="sqlite:///./ecommerce.db"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173"

# Email Settings (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL=""
EMAILS_FROM_NAME="E-commerce Template"