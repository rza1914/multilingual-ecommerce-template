# Environment Configuration for iShop E-commerce Platform - PRODUCTION

# Environment (development, staging, production)
ENVIRONMENT=production

# Database Configuration
# PostgreSQL is recommended for production
DATABASE_URL=postgresql://ishop_user:password@localhost/ishop_prod
# For production, use environment variables or secrets for credentials

# Database Pool Configuration (for production PostgreSQL)
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=40

# Security Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=prod-super-secret-key-keep-this-extremely-long-and-secure-for-production

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration - Production
# Specify exact domains to enhance security
ALLOWED_ORIGINS=https://ishooop.org,https://www.ishooop.org

# Logging Configuration
LOG_LEVEL=INFO

# Email Settings (Production)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=noreply@ishooop.org
# Use environment variables or secure secrets for SMTP_PASSWORD
SMTP_PASSWORD=your-secure-app-password
EMAILS_FROM_EMAIL=noreply@ishooop.org
EMAILS_FROM_NAME=iShop E-commerce

# AI Service Configuration
GROQ_API_KEY=your-production-groq-api-key-here
OPENAI_API_KEY=your-production-openai-api-key-here
DEEPSEEK_API_KEY_PROD=sk-8919de5f7c0147ac882776e3aec006de

# CDN Configuration (for image proxying)
CDN_BASE_URL=https://api.ishooop.org/api/v1/images
CDN_FALLBACK_1=https://cdn1.ishooop.org
CDN_FALLBACK_2=https://cdn2.ishooop.org

# Cache Settings
REDIS_URL=redis://localhost:6379/0
# For production, use a managed Redis service or cluster

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here  # For error tracking

# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600  # 1 hour window

# Security Headers
SECURE_COOKIES=true
TRUSTED_HOSTS=ishooop.org,www.ishooop.org,api.ishooop.org

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_REDIRECT=true
SSL_CERT_PATH=/etc/ssl/certs/ishop.crt
SSL_KEY_PATH=/etc/ssl/private/ishop.key

# Performance Settings
MAX_CONNECTIONS=100
WORKER_COUNT=4  # Based on CPU cores
MAX_REQUEST_SIZE=10MB