# Environment Configuration for iShop E-commerce Platform - DEVELOPMENT

# Environment (development, staging, production)
ENVIRONMENT=development

# Database Configuration
# Use PostgreSQL in production, SQLite for development
DATABASE_URL=sqlite:///./ecommerce_dev.db
# For PostgreSQL: postgresql://user:password@localhost/ishop_dev
# For MySQL: mysql://user:password@localhost/ishop_dev

# Database Pool Configuration (for production PostgreSQL)
DATABASE_POOL_SIZE=5
DATABASE_POOL_MAX_OVERFLOW=10

# ========================================
# Security Configuration
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-super-secret-key-keep-this-safe-and-long-for-development-use-only

# ========================================
# Session Configuration (Development)
# ========================================
SESSION_MAX_AGE=1800
SESSION_COOKIE_NAME=session
SESSION_COOKIE_SECURE=false  # False for development (HTTP)
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_DOMAIN=

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration - Development
# In development, the allowed origins are configured in code
# This is just for documentation
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=DEBUG

# Email Settings (Optional - for password reset, notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-dev-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=dev-noreply@ishooop.org
EMAILS_FROM_NAME=iShop E-commerce Development

# AI Service Configuration - DeepSeek
DEEPSEEK_API_KEY=sk-688afb375aa24b289b8b0ec8aed5ebe3
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_RATE_LIMIT_PER_MINUTE=30
DEEPSEEK_DAILY_LIMIT=1000

# CDN Configuration (for image proxying)
CDN_BASE_URL=http://localhost:8000/api/v1/images
CDN_FALLBACK_1=http://localhost:8000/api/v1/images
CDN_FALLBACK_2=http://localhost:8000/api/v1/images

# Cache Settings
REDIS_URL=redis://localhost:6379/0  # For production caching (optional)

# Monitoring
SENTRY_DSN=  # For error tracking (leave empty to disable)

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour window