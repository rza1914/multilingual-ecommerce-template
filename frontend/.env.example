# Environment Configuration for iShop E-commerce Platform - PRODUCTION

# Environment (development, staging, production)
ENVIRONMENT=production

# Database Configuration
# Use PostgreSQL in production
DATABASE_URL=postgresql://user:password@localhost/ishop_prod
# For MySQL: mysql://user:password@localhost/ishop_prod

# Database Pool Configuration (for production PostgreSQL)
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=30

# ========================================
# Security Configuration
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-keep-this-safe-and-long-for-production-use-only

# ========================================
# Session Configuration (Production)
# ========================================
SESSION_MAX_AGE=86400
SESSION_COOKIE_NAME=session
SESSION_COOKIE_SECURE=true  # True for production (HTTPS)
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_COOKIE_DOMAIN=.yourdomain.com

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration - Production
# In production, allowed origins are configured in code
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO

# Email Settings (For password reset, notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-prod-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=iShop E-commerce Production

# AI Service Configuration - DeepSeek
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_RATE_LIMIT_PER_MINUTE=60
DEEPSEEK_DAILY_LIMIT=10000

# CDN Configuration (for image proxying)
CDN_BASE_URL=https://cdn.yourdomain.com
CDN_FALLBACK_1=https://fallback1.cdn.yourdomain.com
CDN_FALLBACK_2=https://fallback2.cdn.yourdomain.com

# Cache Settings
REDIS_URL=redis://localhost:6379/0  # For production caching

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here  # For error tracking

# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600  # 1 hour window